<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.powerfulshoppinglist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:name="com.example.powerfulshoppinglist.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.powerfulshoppinglist.ShoppingListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.powerfulshoppinglist.AddShoppingItemActivity"
            android:label="@string/title_activity_add_shopping_item" >
        </activity>
        <activity
            android:name="com.example.powerfulshoppinglist.RecipeListActivity"
            android:label="@string/title_activity_recipe_list" >
        </activity>
        <activity
            android:name="com.example.powerfulshoppinglist.AddRecipeItemActivity"
            android:label="@string/title_activity_add_recipe_item" >
        </activity>
    </application>

</manifest>